<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book">
    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logoa"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"/>

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visions Energy Advisor"
        android:id="@+id/appname"
        android:textAlignment="center"
        android:layout_below="@+id/logo"
        android:textSize="20sp"
        android:textColor="#1976d2"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Visit Location"
        android:id="@+id/tvLoc"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/appname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />


    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etBuildNo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="Flat No./Building"
        android:layout_below="@+id/tvLoc" />

    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etLandmark"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="Landmark, Road"
        android:layout_below="@+id/etBuildNo" />

    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCity"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="City"
        android:layout_below="@+id/etLandmark"/>

    <Button
        android:background="@drawable/bg_button"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bVLState"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:hint="@string/state"
        android:layout_below="@+id/etCity" />

    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPincode"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="Pincode"
        android:layout_below="@+id/bVLState" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/continue_butt"
        android:id="@+id/bAddr"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/etPincode"
        android:layout_alignStart="@+id/tvLoc"
        android:layout_alignEnd="@+id/tvLoc"
        android:background="@null"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>

</RelativeLayout>
