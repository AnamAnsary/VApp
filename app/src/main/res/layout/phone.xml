<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Getph">


    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logoa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visions Energy Advisor"
        android:id="@+id/appname"
        android:textAlignment="center"
        android:layout_below="@+id/logo"
        android:textSize="20sp"
        android:textColor="#1976d2"
        android:textStyle="bold"
        />

    <Button
        android:textAppearance="?android:textAppearanceLarge"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:paddingLeft="60dp"
        android:gravity="left|center_vertical"
        android:layout_width="match_parent"
        android:text="Select your State"
        android:layout_height="wrap_content"
        android:id="@+id/State"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/appname"
        android:background="@drawable/bg_spinner"
        />



    <TextView
        android:text="Please Enter your Mobile number for verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phno"
        android:layout_below="@id/State"
        android:layout_marginTop="25dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginLeft="40dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/editTextId"
        android:inputType="phone"
        android:layout_below="@id/phno"
        android:digits="0123456789+"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        android:maxLength="10"
        android:hint="  Mobile Number  "
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/ContB"
        android:layout_below="@id/editTextId"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:cropToPadding="true"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/continue_butt"
        android:layout_alignStart="@+id/logo"
        android:layout_alignEnd="@+id/logo" />
</RelativeLayout>